<div class="card">
  
	<div class="card_image"><%= image_tag product.image.url(:thumb) if product.image? %></div>
  
	<div class="card_content">
  	
		<p class="card_text">
			<span class="price">
				<%= product.price %> 
			</span>
			
			<del class="old_price">
				<%= product.old_price %>
			</del> 
		</p>
		
		<h2 class="card_title">
			<span class="productBrand">
				<%= product.category.name %>
			</span>
			|
			<span class="productName">
				<%= product.name %>
			</span>
		</h2>

	</div>	
	
	<%= link_to "Перейти", product, class: "btn card_btn" %>

</div>
    