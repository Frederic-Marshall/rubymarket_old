<div class="form">
  <%= form_with(model: product) do |form| %>
    <% if product.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% product.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="form-group">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-field" %>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-area" %>
    </div>

    <div class="form-group">
      <%= form.label :category_id, class: "form-label" %>
      <%= form.collection_select :category_id, 
                                  Category.order(:name), 
                                  :id, :name, 
                                  {include_blank: true},
                                  class: "form-select" %>
    </div>

    <div class="form-group">
      <%= form.label :price, class: "form-label" %>
      <%= form.text_field :price, class: "form-field" %>
    </div>

    <div class="form-group">
      <%= form.label :old_price, class: "form-label" %>
      <%= form.text_field :old_price, class: "form-field" %>
    </div>

		<div class="form-group">
      <%= form.label :all_tags, class: "form-label" %>
      <%= form.text_field :all_tags, class: "form-field" %>
    </div>

    <div class="form-group">
      <%= form.file_field :image, class: "form-file-field" %>
    </div>

    <div class="form-group">
      <%= form.submit "Создать", class: "form-submit" %>
    </div>
  <% end %>
</div>